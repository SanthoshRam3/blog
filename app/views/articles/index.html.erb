<div id="page-content">
<h1 class="text-center mt-4">Listing all articles</h1>
<div class="container">
<% @articles.each do |var| %>
<div class="row justify-content-md-center">
<div class="col-8 mt-4">
  <div class="card text-center shadow  mb-5 bg-white rounded">

    <h5 class="card-header fst-italic fw-light">By Santhosh Ram</h5>

    <div class="card-body">
      <h5 class="card-title"><%=link_to var.title , article_path(var), class:"text-success" %></h5>
      <p class="card-text"><%= truncate(var.description,length: 100) %></p>
      <%=link_to'View',article_path(var),class: "btn btn-outline-success"%>
      <%=link_to'Edit',edit_article_path(var),class: "btn btn-outline-info"%>
      <%= link_to 'Delete' , article_path(var), method: :delete , data: { confirm: "Are you sure?"} ,class:"btn btn-outline-danger" %>
    </div>
    <div class="card-footer text-muted">
     <small>Created <%= var.created_at %> ago Edited <%= var.updated_at %> ago</small>
    </div>
    </div>
  </div>
  </div>
<%end%>
</div>
</div>
     