
<h2 class="text-center mt-4"><%=@article.title%></h2>
<div class="container">
<div class="row justify-content-md-center">
<div class="col-8 mt-4">
  <div class="card text-center shadow  mb-5 bg-white rounded">

    <h5 class="card-header fst-italic fw-light">By <%= @article.user.username if @article.user%></h5>
      <%= link_to gravatar_for(@article.user), users_path(@article.user)%>
    <div class="card-body">
      <div class="card-text text-left"><%= simple_format(@article.description) %></div>
      <%=link_to'Edit',edit_article_path(@article),class: "btn btn-outline-info"%>
      <%= link_to 'Delete' , article_path(@article), method: :delete , data: { confirm: "Are you sure?"} ,class:"btn btn-outline-danger" %>
    </div>
    <div class="card-footer text-muted">
     <small>Created <%= @article.created_at %> ago Edited <%= @article.updated_at %> ago</small>
    </div>
    </div>
  </div>
  </div>
</div>

     